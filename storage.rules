rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // チャットファイル用のルール
    match /chat-files/{roomId}/{fileName} {
      // 読み取り: 認証済みユーザーで、そのチャットルームのメンバーのみ
      allow read: if request.auth != null &&
        request.auth.uid in firestore.get(/databases/(default)/documents/chatRooms/$(roomId)).data.memberIds;
      
      // 書き込み: 認証済みユーザーで、そのチャットルームのメンバーのみ
      // かつファイルサイズが10MB以下
      allow write: if request.auth != null &&
        request.auth.uid in firestore.get(/databases/(default)/documents/chatRooms/$(roomId)).data.memberIds &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB制限
        request.resource.contentType.matches(
          'image/(jpeg|jpg|png|gif|webp)|' +
          'application/(pdf|msword|vnd.openxmlformats-officedocument.wordprocessingml.document|' +
          'vnd.ms-excel|vnd.openxmlformats-officedocument.spreadsheetml.sheet|zip|x-zip-compressed)'
        );
    }
    
    // アバター画像用のルール
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB制限
        request.resource.contentType.matches('image/.*');
    }
    
    // その他のファイルはデフォルトで拒否
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}